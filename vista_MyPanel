    private void boton_calcular(java.awt.event.ActionEvent evt) {                                
        // TODO add your handling code here:
        //asignar();
        
        
        
        temperatura_optima = Float.parseFloat(jTextField4.getText());
        humedad_optima = Float.parseFloat(jTextField5.getText());
        luminosidad_optima = Float.parseFloat(jTextField6.getText());
        tiempo_regado = Integer.parseInt(jTextField7.getText());
        float temperatura_actual = Float.parseFloat(jTextField8.getText());
        float humedad_actual = Float.parseFloat(jTextField9.getText());
        float luminosidad_actual = Float.parseFloat(jTextField10.getText());
        dia = Integer.parseInt(jTextField2.getText());
        mes = Integer.parseInt(jTextField1.getText());
        year = Integer.parseInt(jTextField3.getText());
        String fecha = Notificacion.mostrarnoti(dia, mes, year);
        jTextField15.setText(fecha);
        String tem_actual = jTextField8.getText();
        String hum_actual = jTextField9.getText();
        String lum_actual = jTextField10.getText();
        if (tem_actual.isEmpty()
            || hum_actual.isEmpty()
            || lum_actual.isEmpty()) {
            JOptionPane.showMessageDialog(this, "debes llenar todos los campos ");
        } else {
            JOptionPane.showMessageDialog(this,
                    """                            
                    Estas son las variables ingresadas                             
                    ta """
                    + temperatura_actual
                    + "\n ha "
                    + humedad_actual
                    + "\n la "
                    + luminosidad_actual
                    + " \n to "
                    + temperatura_optima
                    + "\n ho "
                    + humedad_optima
                    + "\n lo "
                    + luminosidad_optima
                    + "\n tr "
                    + tiempo_regado);
        }
        boolean respuestaDia = planta.com(dia);
        if (respuestaDia == false) {
            String mensaje = planta.comprobardia(dia, message);
            JOptionPane.showMessageDialog(this, mensaje);
            jTextField15.setText("");
            return;
        }
        boolean respuestaMes = planta.com2(mes);
        if (respuestaMes == false) {
            String mensajeMes = planta.comprobarmes(mes, message);
            JOptionPane.showMessageDialog(this, mensajeMes);
            jTextField15.setText("");
            return;
        }

        boolean So = planta.comparar_cond_actyop(temperatura_actual,
                                                 temperatura_optima,
                                                 humedad_actual,
                                                 humedad_optima,
                                                 luminosidad_actual,
                                                 luminosidad_optima);
        if (So == true) {
            cont = planta.crearlistdbym(cont, So);

            String texto = String.valueOf(cont[0]);
            jTextField11.setText(texto);
            jTextField13.setText("Son buenas");
            String mensajeTipo = Notificacion.mostrarTipo(tipo, So);
            jTextField14.setText(mensajeTipo);
            String tiempoR = planta.mostrartiemporegado(0, message);
            jTextField16.setText(tiempoR);
            String mensajeCondiciones = planta.mostrar_evaluacioncondact(So, message);
            jTextField17.setText(mensajeCondiciones);
            jTextField18.setText("Bueno");

        } else {
            cont = planta.crearlistdbym(cont, So);

            String texto2 = String.valueOf(cont[1]);
            jTextField12.setText(texto2);
            jTextField13.setText("Son malas");
            String mensajeTipo = Notificacion.mostrarTipo(tipo, So);
            jTextField14.setText(mensajeTipo);
            String tiempoR = planta.mostrartiemporegado(tiempo_regado, message);
            jTextField16.setText(tiempoR);
            String mensajeCondiciones = planta.mostrar_evaluacioncondact(So, message);
            jTextField17.setText(mensajeCondiciones);
            jTextField18.setText("Malo");

        }
        o[0]=jTextField11.getText().trim();
        o[1]=jTextField12.getText().trim();
        o[2]=jTextField14.getText().trim();
        o[3]=jTextField15.getText().trim();
        o[4]=jTextField13.getText().trim();
        o[5]=jTextField16.getText().trim();
        o[6]=jTextField17.getText().trim();
        o[7]=jTextField18.getText().trim();
        dtm.addRow(o);


    }                               


