        }
        
    }                              
    private void reiniciarFormulario() {
        jButton3.setEnabled(true);
        jButton4.setEnabled(true);
        jButton5.setEnabled(true);
        jButton6.setEnabled(true);
        tipoDePlantSeleccionada = -1;

    }

    private void deshabilitarBotones(javax.swing.JButton[] botones) {
        for (javax.swing.JButton boton : botones) {
            boton.setEnabled(false);
        }
    }
    private float temperatura_actual;
    private float temperatura_optima;
    private float humedad_actual;
    private float humedad_optima;
    private float luminosidad_actual;
    private float luminosidad_optima;
    private int tiempo_regado;
    private int tipo;
    private String mensaje;
    private int dia;
    private int mes;
    private int year;

    private void asignarValores() {
        switch (tipoDePlantSeleccionada) {
            case 0://cactus
                temperatura_optima = 30;
                humedad_optima = 15;
                luminosidad_optima = 7;
                tiempo_regado = 1;
                jTextField4.setText("30");
                jTextField5.setText("15");
                jTextField6.setText("7");
                jTextField7.setText("1");

                break;
            case 1://girasol
                temperatura_optima = 20;
                humedad_optima = 50;
                luminosidad_optima = 5;
                tiempo_regado = 2;
                jTextField4.setText("20");
                jTextField5.setText("50");
                jTextField6.setText("5");
                jTextField7.setText("2");
                break;
            case 2://rosa
                temperatura_optima = 23;
                humedad_optima = 60;
                luminosidad_optima = 6;
                tiempo_regado = 3;
                jTextField4.setText("23");
                jTextField5.setText("60");
                jTextField6.setText("6");
                jTextField7.setText("3");
                break;
            case 3://otra
                jTextField4.setText("");
                jTextField5.setText("");
                jTextField6.setText("");
                jTextField7.setText("");
                jTextField4.setEditable(true);
                jTextField5.setEditable(true);
                jTextField6.setEditable(true);
                jTextField7.setEditable(true);
                break;
            default://caso por defecto
                jTextField4.setText("");
                jTextField5.setText("");
                jTextField6.setText("");
                jTextField7.setText("");
                break;
        }
        /*   temperatura_optima = Float.parseFloat(jTextField4.getText());
                humedad_optima = Float.parseFloat(jTextField5.getText());
                luminosidad_optima = Float.parseFloat(jTextField6.getText());
                tiempo_regado = Integer.parseInt(jTextField7.getText());     */
    }

